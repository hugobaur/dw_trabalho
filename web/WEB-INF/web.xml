<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Aeroporto</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <!-- Servlet de Login. A JSP chamarÃ¡ pelo nome "login" para chamar a servlet "loginServlet" -->
    <!-- url-pattern deve ter a "/" na frente, me custou 40 minutos para resolver, infeliz!! -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>br.com.uff.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>br.com.uff.servlet.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buscarVooPersonalizado</servlet-name>
        <servlet-class>br.com.uff.servlet.BuscaVoos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buscarVooPersonalizado</servlet-name>
        <url-pattern>/buscarVooPersonalizado</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adicionarVooServlet</servlet-name>
        <servlet-class>br.com.uff.servlet.AdicionaVoo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adicionarVooServlet</servlet-name>
        <url-pattern>/adicionarVoo</url-pattern>
    </servlet-mapping>

</web-app>